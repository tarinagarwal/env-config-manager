# Environment Configuration Manager - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================================================
# Database Configuration
# ============================================================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_secure_password
MONGO_DATABASE=env-config-manager

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=changeme_secure_redis_password

# ============================================================================
# Application Ports
# ============================================================================
BACKEND_PORT=3000
FRONTEND_PORT=8080
HTTP_PORT=80
HTTPS_PORT=443

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# ============================================================================
# Encryption Configuration
# ============================================================================
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_encryption_key_here

# ============================================================================
# AWS Configuration (for KMS and platform sync)
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@example.com

# ============================================================================
# Frontend Configuration
# ============================================================================
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://api.your-domain.com

# ============================================================================
# OAuth Configuration
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ============================================================================
# Enterprise License (for on-premise deployments)
# ============================================================================
LICENSE_KEY=your_enterprise_license_key

# ============================================================================
# LDAP Configuration (Enterprise only)
# ============================================================================
ENABLE_LDAP=false
LDAP_URL=ldap://ldap.example.com:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=ldap_password
LDAP_SEARCH_BASE=ou=users,dc=example,dc=com

# ============================================================================
# SAML Configuration (Enterprise only)
# ============================================================================
ENABLE_SAML=false
SAML_ENTRY_POINT=https://idp.example.com/saml/sso
SAML_ISSUER=env-config-manager
SAML_CERT=your_saml_certificate

# ============================================================================
# Worker Configuration
# ============================================================================
WORKER_REPLICAS=2
